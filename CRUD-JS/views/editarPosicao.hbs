{{#unless error}}
<div class="bg-light p-5 rounded mt-3">
    <h1>Editar</h1>
    <form action="/atualizarPosicao" method="post">
        <div class="row mt-5">
            <div class="col-md-5 mb-3">
                <label for="nome" class="form-label">Posição estoque</label>
                <input value="{{descricao}}" type="text" class="form-control" id="tipo" name="tipo">
                <input value="{{id_posicao}}" type="hidden" class="form-control" id="id" name="id">
            </div>
            <div class="col-md-2 mb-3">
                <button class="mt-3 p-3 w-100 btn btn-warning">Editar</button>
            </div>
        </div>
    </form>
</div>
{{else}}
<div class="card bg-danger text-white">
    <div class="card-body">
        Houve um problema: {{problema}}
    </div>
</div>
{{/unless}}