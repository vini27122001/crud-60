<div class="bg-light p-5 rounded mt-3">
    <h1>Posicao estoque</h1>
    {{>_msg}}
    <form action="/cadPos" method="post">
        <div class="row mt-5">
            <div class="col-md-5 mb-3">
                <label for="nome" class="form-label">Posição estoque</label>
                <input type="text" class="form-control" id="nome" name="nome" placeholder="ex: bloco G, bloco Y"
                    required>
            </div>
            <div class="col-md-2 mb-3">
                <button class="mt-3 p-3 w-100 btn btn-success">Cadastrar</button>
            </div>
        </div>
    </form>
</div>