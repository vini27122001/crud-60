<div class="p-5 rounded mt-3">
  <h1>Listar Posicoes</h1>
  {{#if table}}
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Posição estoque</th>
      </tr>
    </thead>
    <tbody>
      {{#each posicaos}}
      <tr>
        <th scope="row">{{id_posicao}}</th>
        <th scope="row">{{descricao}}</th>
        <td>
          <div class="row g-1">
            <div class="col-6 col-md-6">
              <form action="/editarPosicao" method="post">
                <input type="hidden" name="id" value="{{id_posicao}}">
                <button class="btn btn-info">Editar</a>
              </form>
            </div>
            <div class="col-6 col-md-6">
              <button type="button" data-bs-toggle="modal" data-bs-target="#deleteModal_{{id_posicao}}"
                class="btn btn-danger">
                Deletar
              </button>
            </div>
          </div>
        </td>
      </tr>
      <!-- Modal -->
      <div class="modal fade" id="deleteModal_{{id_posicao}}" tabindex="-1" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">CONFIRMAÇÃO</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body fw-bold text-danger">
              Tem certeza que quer deletar a posicao {{descricao}}?
            </div>
            <div class="modal-footer">
              <form action="/deletarPosicao" method="post">
                <input type="hidden" name="id" value="{{id_posicao}}">
                <button type="submit" class="btn btn-primary btn-danger">Sim, quero deletar</button>
              </form>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <div class="card mt-4">
    <div class="card-body">
      Nenhum item encontrado
    </div>
  </div>
  {{/if}}
</div>